extends ../layouts/commom
block content


        h1
            span.mr-4 Users
            a.btn.btn-primary(href="/users/create") Add new
        .d-flex.align-items-center
            
            form.ml-auto(action ="/users/search", method ="GET" class="d-flex")
                input(type="text" placeholder="enter your name" name ="q" value="" class="form-control")
                button(class= "btn btn-primary ml-2") Search
        table.table
            tr
                th Avatar
                th Name
                th Phone
                th Actions
            each user in users
                tr
                    td
                        img(src= "/" + user.avatar, width= "48")
                    td= user.name
                    td= user.phone
                    td
                        a.btn.btn-info(href="/users/"+ user.id) View
                        