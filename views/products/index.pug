extends ../layouts/commom

block content
  h1 Product
  .d-flex.align-items-center
    form.ml-auto(action="/product/search" method="GET" class="d-flex")
      input(type="text"  name ="q" value="" class="form-control pl-3")
      button(class= "btn btn-primary ml-2") Search

  .row    
    each product in products  
      .col-sm-6.col-md-4.col-lg-3
        .card.mb-3
          img.card-img-top(src= product.image )         
          .card-body
            h5.card-title.align-center= product.name
            p.card-text= product.content.substr(0, 40)+ "  ...Xem thÃªm"
            a.btn.btn-primary(href='/cart/add/' + product.id) Add to card

    nav(aria-label='Page navigation example')
      ul.pagination
        li.page-item
          a.page-link(href='#') Previous
        each item, index in page
          li.page-item
            a.page-link(href=item)= index+1
        li.page-item
          a.page-link(href='#') Next          